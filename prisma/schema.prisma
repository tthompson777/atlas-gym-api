generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Aluno {
  id        Int     @id @default(autoincrement())
  nome      String
  sexo      String
  nascimento DateTime
  telefone  String?
  email     String?
  cpf       String  @unique
  rua       String?
  numero    String?
  bairro    String?
  cidade    String?
  pais      String?
  status    String  @default("Ativo")
  criadoEm  DateTime @default(now())
  fotoBase64 String? @db.Text
  descriptor  Json?
  entradas   Entrada[]
}

model Entrada {
  id        Int      @id @default(autoincrement())
  alunoId   Int
  aluno     Aluno    @relation(fields: [alunoId], references: [id])
  dataHora  DateTime @default(now())
}