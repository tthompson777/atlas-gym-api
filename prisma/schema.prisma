generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Aluno {
  id         Int              @id @default(autoincrement())
  nome       String
  sexo       String
  nascimento DateTime
  telefone   String?
  email      String?          @unique
  cpf        String           @unique
  rua        String?
  numero     String?
  bairro     String?
  cidade     String?
  pais       String?
  status     String           @default("Pendente")
  criadoEm   DateTime         @default(now())
  fotoBase64 String?          @db.Text
  descriptor Json?
  senha      String?
  entradas   RegistroAcesso[]
  Transacao  Transacao[]
  fichas     FichaExercicio[]

  // Multiempresa
  empresaId  Int
  empresa    Empresa          @relation(fields: [empresaId], references: [id])
}

model RegistroAcesso {
  id          Int       @id @default(autoincrement())
  alunoId     Int
  aluno       Aluno     @relation(fields: [alunoId], references: [id])
  dataEntrada DateTime
  dataSaida   DateTime? // Opcional até a saída ser registrada
}

model Transacao {
  id        Int      @id @default(autoincrement())
  tipo      String // 'Entrada' ou 'Saida'
  categoria String // Ex: 'Mensalidade', 'Água', etc.
  valor     Float
  descricao String?
  dataHora  DateTime @default(now())
  alunoId   Int? // Opcional para lançamentos relacionadas a alunos
  aluno     Aluno?   @relation(fields: [alunoId], references: [id])
  paymentLink     String?
  statusPagamento String?
}

model FichaExercicio {
  id          Int         @id @default(autoincrement())
  aluno       Aluno       @relation(fields: [alunoId], references: [id])
  alunoId     Int         @unique
  dataCriacao DateTime    @default(now())
  exercicios  Exercicio[]
}

model Exercicio {
  id         Int            @id @default(autoincrement())
  grupo      String
  nome       String
  series     Int
  repeticoes Int
  fichaId    Int
  ficha      FichaExercicio @relation(fields: [fichaId], references: [id])
}

model Empresa {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  uid       String   @unique // UID do Firebase do dono da empresa
  criadoEm  DateTime @default(now())
  alunos    Aluno[]
}

model Superadmin {
  id       Int    @id @default(autoincrement())
  email    String @unique
  senha    String
}
