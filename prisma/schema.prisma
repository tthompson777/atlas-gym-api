generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Aluno {
  id        Int     @id @default(autoincrement())
  nome      String
  sexo      String
  nascimento DateTime
  telefone  String?
  email     String? @unique
  cpf       String  @unique
  rua       String?
  numero    String?
  bairro    String?
  cidade    String?
  pais      String?
  status    String  @default("Ativo")
  criadoEm  DateTime @default(now())
  fotoBase64 String? @db.Text
  descriptor  Json?
  senha       String?
  entradas   Entrada[]

  Transacao Transacao[]
}

model Entrada {
  id        Int      @id @default(autoincrement())
  alunoId   Int
  aluno     Aluno    @relation(fields: [alunoId], references: [id])
  dataHora  DateTime @default(now())
}

model Transacao {
  id         Int       @id @default(autoincrement())
  tipo       String    // 'entrada' ou 'saida'
  categoria  String    // Ex: 'Mensalidade', '√Ågua', etc.
  valor      Float
  descricao  String?
  dataHora   DateTime  @default(now())
  alunoId    Int?      // Opcional para entradas relacionadas a alunos
  aluno      Aluno?    @relation(fields: [alunoId], references: [id])
}